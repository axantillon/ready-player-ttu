generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("SUPABASE_DATABASE")
    directUrl = env("SUPABASE_DIRECT")
}

model User {
    id                 String    @unique
    name               String?
    email              String    @id @unique
    image              String?
    createdAt          DateTime  @default(now())
    groupMembers       String[]
    groupName          String   @default("")
    goldKey            Boolean   @default(false)
    goldKeyAcquired    DateTime?
    emeraldKey         Boolean   @default(false)
    emeraldKeyAcquired DateTime?
    crystalKey         Boolean   @default(false)
    crystalKeyAcquired DateTime?
}
